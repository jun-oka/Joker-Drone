html
    head
        title Joker Drone
        link(rel='stylesheet', href='/css/app.css')
        link(rel='stylesheet', href='/css/index.css')
        script(src='/js/ace.js')
        script(src='/js/index.js')

    body
        // header
        include header

        // content
        .content
            pre#editor.editor
                | drone.takeoff();
                | drone.go({x: 0.0, y: 0.0, z: 1.5});
                | drone.go({x: 1.0, y: 0.0, z: 1.5});
                | drone.go({x: 1.0, y: 1.0, z: 1.5});
                | drone.go({x: 0.0, y: 1.0, z: 1.5});
                | drone.go({x: 0.0, y: 0.0, z: 1.5});
                | drone.land();

            button(onclick='deploy();') Deploy

        // footer
        include footer
